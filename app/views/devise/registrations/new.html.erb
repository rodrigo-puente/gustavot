<div class="min-h-screen bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-2xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
        Welcome
      </h1>
      <p class="text-lg text-base-content/70 mt-2">Create your account to get started</p>
    </div>

    <!-- Card -->
    <div class="card bg-base-100 shadow-2xl">
      <div class="card-body p-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- Name Fields -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">First Name <span class="text-error">*</span></span>
              </label>
              <%= f.text_field :first_name, autofocus: true, class: "input input-bordered focus:input-primary transition-all", placeholder: "John", required: true %>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Last Name <span class="text-error">*</span></span>
              </label>
              <%= f.text_field :last_name, class: "input input-bordered focus:input-primary transition-all", placeholder: "Doe", required: true %>
            </div>
          </div>

          <!-- Email -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Email Address <span class="text-error">*</span></span>
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
              </div>
              <%= f.email_field :email, autocomplete: "email", class: "input input-bordered focus:input-primary transition-all pl-10 w-full", placeholder: "john@example.com", required: true %>
            </div>
          </div>

          <!-- Date of Birth -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Date of Birth</span>
              <span class="label-text-alt text-base-content/50">Optional</span>
            </label>
            <%= f.date_field :date_of_birth, class: "input input-bordered focus:input-primary transition-all" %>
          </div>

          <!-- Phone Number -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Phone Number <span class="text-error">*</span></span>
            </label>
            <div class="grid grid-cols-5 gap-3">
              <%= f.select :country_code,
                  [
                    ['+1', 'US/Canada'],
                    ['+44', 'UK'],
                    ['+52', 'Mexico'],
                    ['+34', 'Spain'],
                    ['+49', 'Germany'],
                    ['+33', 'France'],
                    ['+39', 'Italy'],
                    ['+81', 'Japan'],
                    ['+86', 'China'],
                    ['+91', 'India']
                  ].map { |code, country| ["#{code} (#{country})", code] },
                  { selected: '+1' },
                  class: "select select-bordered focus:select-primary transition-all col-span-2" %>

              <div class="relative col-span-3">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <%= f.telephone_field :phone_number, class: "input input-bordered focus:input-primary transition-all pl-10 w-full", placeholder: "5551234567", required: true %>
              </div>
            </div>
          </div>

          <!-- Password -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Password <span class="text-error">*</span></span>
                <% if @minimum_password_length %>
                  <span class="label-text-alt text-base-content/50"><%= @minimum_password_length %> chars min</span>
                <% end %>
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered focus:input-primary transition-all pl-10 w-full", placeholder: "••••••••", required: true %>
              </div>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">Confirm Password <span class="text-error">*</span></span>
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered focus:input-primary transition-all pl-10 w-full", placeholder: "••••••••", required: true %>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-control mt-8">
            <%= f.submit "Create Account", class: "btn btn-primary btn-lg w-full gap-2" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="divider my-6">Already have an account?</div>

        <!-- Links -->
        <div class="text-center">
          <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline btn-wide" %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-6 text-sm text-base-content/60">
      <p>By creating an account, you agree to our Terms of Service and Privacy Policy</p>
    </div>
  </div>
</div>
