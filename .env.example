# Database Configuration
DATABASE_URL=postgresql://localhost/gustavot_development

# Redis (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Devise
DEVISE_SECRET_KEY=your_devise_secret_key_here

# Twilio (SMS 2FA)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
APP_DOMAIN=localhost:3000
RAILS_ENV=development

# Session Settings
SESSION_TIMEOUT_HOURS=72

# Secret Key Base (auto-generated by Rails)
# SECRET_KEY_BASE is automatically loaded from config/master.key in production
